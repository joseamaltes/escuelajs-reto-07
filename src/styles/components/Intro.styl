ventu-color = #72d4d8

.site-blocks-cover
    background-color ventu-color
    min-height 600px
    height calc(100vh - 174px)
    background-size cover
    background-position center 
    width 100%
    display flex
    flex-wrap wrap
    align-items center 
    

.container-intro
    padding auto 15px auto 15px
    

.contaianer-intro-text
    font-weight bold


.mb-2
    font-size 50px
    margin-bottom 0.5rem!important
    line-height 1.2
    margin-top 0
    display block
    margin-block-start 0.67em
    margin-block-end 0.67em
    margin-inline-start 0px
    margin-inline-end 0px
    
.intro-text 
    font-size 16px
    line-height 1.5
    display block
    text-align left

.mb-4
    color #333333
    font-size 20px
    line-height 35px
    margin-bottom 1.5rem!important 


.intro-image
    width 350px
    background-color green

.Button
    cursor pointer
    padding 10px 20px !important
    background-color #7971ea
    font-size 14px !important
    font-weight 300
    border-radius 5px;
    border-color #7971ea
    line-height 1.5

.Button-link
    color white
    text-decoration none
    letter-spacing .2em

    
    
    

    

